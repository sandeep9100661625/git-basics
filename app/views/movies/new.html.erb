<h1>Create new Movie_Details</h1>

<%if @movie.errors.any?%>
<ul>
  <%@movie.errors.full_messages.each do |i|%>
  <li><%=i%></li>
  <%end%>

</ul>
<%end%>

<%=form_with(model: @movie, local: true) do |i|%>
  <p>
    <%= i.label :movie_name%><br>
    <%= i.text_field :movie_name%>

  </p>
  <p>
    <%=i.label :director%><br>
    <%= i.text_field :director%>
  </p>

  <p>
    <%= i.label :hero%><br>
    <%= i.text_field :hero%>
  </p>

  <p>
    <%=i.submit%>
  </p>
<%end%>

<h1>Users page</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Articles</th>
      <th colspan = "3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |i|%>
    <tr>
      <td><%=i.username%></td>
      <td><%= pluralize(i.articles.count,"article")%></td>
      <td><%= link_to 'show',user_path(i.id)%></td>
      <% if logged_in?%>
        <%if current_user == i.id%>
          <td><%= link_to 'edit',edit_user_path(i.id)%></td>
        <%end%>
        <%if current_user.admin? || current_user == i %>
          <td><%= link_to 'delete',user_path(i.id), method: :delete%></td>
        <%end%>
      <%end%>
    </tr>
    <%end%>
  </tbody>
</table>
<%= will_paginate @users %>
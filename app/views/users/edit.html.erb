<h1>Edit the user</h1>

<%if @user.errors.any?%>
    <ul>
    <%@user.errors.full_messages.each do |i|%>
    <li><%=i%></li>
    <%end%>

    </ul>
<%end%>

<%=form_with(model: @user, local: true) do |i|%>
  <p>
    <%= i.label :Username%><br>
    <%= i.text_field :username%>

  </p>
  <p>
    <%=i.label :Email%><br>
    <%= i.text_field :email%>
  </p>

  <p>
    <%= i.label :password%><br>
    <%= i.password_field :password%>
  </p>

  <p>
    <%=i.submit%>
  </p>
<%end%>
